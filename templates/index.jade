include _mixins

doctype html
html(lang="en")

    head
    
        title David Pisek - Resume
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        
        link(rel='stylesheet' href='main.css')
        link(href='https://fonts.googleapis.com/css?family=Roboto:300,400,500,700' rel='stylesheet')
        
        
    body
    
        header.banner(role='banner')
        
            .banner__main
                h1.banner__heading 
                    | David Pisek 
                p.banner__intro 
                    | Front End Enthusiast par excellence 
                    
            address.banner__aside.address
                .address__email 
                    strong email: 
                    a(href='mailto:dave.pisek@gmail.com') dave.pisek@gmail.com
                .address__web
                    strong web: 
                    a(href='http://dave.pisek.me') http://dave.pisek.me
                
                
        main.main(role='main')
        
            article.main__article
            
                h1 My Resume
                
                section.section.overview
                    h1.section__heading 
                        | Overview
                
                section.section.skills
                    h1.section__heading 
                        | Skills
                        
                    .skills__content
                        .skillset.basic
                            h2.skillset__heading.--set Basic
                            ul.skillset__content
                                +skillsetItem('JS', '95')
                                +skillsetItem('HTML', '90')
                                +skillsetItem('CSS', '90')
                        .skillset.frameworks
                            h2.skillset__heading.--set Frameworks
                            ul.skillset__content
                                +skillsetItem('Node', '80')
                                +skillsetItem('React', '80')
                        .skillset.other
                            h2.skillset__heading.--set Other
                            ul.skillset__content
                                +skillsetItem('Vim', '80')
                                +skillsetItem('Unix', '75')
                    
                
                section.section.experience
                    h1.section__heading Experience
                    ol.experience__content
                        +experienceItem(
                            'Feb, 2013', 
                            'Present',
                            'NewsCorp', 
                            'Australia', 
                            'Senior Front End Engineer',
                            'Node, Jade, CSS, JS, Automation, ' +
                            'Mentoring, FE Architecture'
                        )
                        +experienceItem(
                            'Jun, 2011',
                            'Mar, 2013',
                            'Worldnomads Group',
                            'Australia',
                            'Front End Developer',
                            'HTML, CSS, Javascript, .NET, FE Architecture'
                        )
                        
            aside.main__aside
            
                .infobox
                    h2.infobox__header Awards
                    ul
                        li
                            h3 Accountability Award
                        li
                            h3 Dev Foundry (Peoples Choice)
                    
                    
        footer(role='contentinfo')    
            h2 More to see
            ul.links
                li
                    a(href='http://github.com/davepies') github
                li
                    a(href='http://linkedin.com/davepies') linkedin


        script(src='https://rawgit.com/FremyCompany/css-grid-polyfill/master/bin/css-polyfills.min.js')
